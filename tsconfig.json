{
    "compilerOptions": {
        "target": "esnext",
        "jsx": "react-jsx",
        "module": "esnext",
        "rootDir": "./src",
        "moduleResolution": "bundler",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./dist"
    ]
}
